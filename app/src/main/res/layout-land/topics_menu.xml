<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/ParentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.questiontime.TopicsChoiceFragment">

    <TextView style="@style/HeaderStyle"
        android:id="@+id/topics_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/topics_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topics_header">

        <TableLayout
            android:id="@+id/checkbox_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2"
            android:gravity="center">


        </TableLayout>

    </ScrollView>

    <TextView style="@style/BottomTextViewStyle"
        android:id="@+id/swipe_message"
        android:text="@string/swipe" />


</RelativeLayout>