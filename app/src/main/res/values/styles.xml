<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ParentLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/header_padding</item>
    </style>

    <style name="HeaderStyleLandscape" parent="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">false</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/question_text_padding</item>
    </style>

    <style name="QuestionStyleLandscape" parent="QuestionStyle">
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomTextViewStyle" parent="QuestionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/bottom_textview_margin</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">@dimen/radio_group_padding_top</item>
        <item name="android:paddingBottom">@dimen/radio_group_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/radio_group_padding_left</item>
    </style>

    <style name="RadioGroupLandscape" parent="RadioGroup">
        <item name="android:layout_centerVertical">false</item>
        <item name="android:paddingRight">@dimen/radio_group_padding_right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="OptionsStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:paddingTop">@dimen/radio_button_padding</item>
        <item name="android:paddingBottom">@dimen/radio_button_padding</item>
    </style>

    <style name="OptionsStyleLandscape" parent="OptionsStyle">
    </style>

    <style name="CheckBoxGroup">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CheckBoxStyle">
        <item name="android:textSize">@dimen/checkbox_text_size</item>
        <item name="android:paddingTop">@dimen/checkbox_padding_top</item>
        <item name="android:paddingRight">@dimen/checkbox_padding_right</item>
        <item name="android:paddingBottom">@dimen/checkbox_padding_bottom</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@color/submitButtonbgColor</item>
        <item name="android:textColor">@color/submitButtonTextColor</item>
        <item name="android:layout_margin">@dimen/button_margins</item>
    </style>

    <style name="ResultsScrollViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/edit_text_margin_left</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_bottom</item>
        <item name="android:paddingTop">@dimen/edit_text_padding_top</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="TableRows">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/table_row_text_size</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TableHeaders" parent="TableRows">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/table_header_text_size</item>
    </style>

</resources>
