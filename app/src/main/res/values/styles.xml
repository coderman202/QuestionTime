<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="QuestionNumberStyle">
        <item name="android:textSize">@dimen/question_num_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/question_num_padding</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioGroup">
        <item name="android:paddingTop">@dimen/radio_group_padding_top</item>
        <item name="android:paddingBottom">@dimen/radio_group_padding_bottom</item>
    </style>

    <style name="OptionsStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:paddingBottom">@dimen/radio_button_padding</item>
    </style>

    <style name="CheckBoxGroup">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
