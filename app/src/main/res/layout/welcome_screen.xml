<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.questiontime.WelcomeScreenFragment">

    <RelativeLayout
        android:id="@+id/welcome_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:visibility="visible">

        <TextView style="@style/HeaderStyle"
            android:id="@+id/welcome_title"
            android:text="@string/welcome"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <TextView style="@style/QuestionStyle"
            android:id="@+id/welcome_message"
            android:text="@string/instructions"
            android:layout_centerVertical="true"/>

        <TextView style="@style/BottomTextViewStyle"
            android:id="@+id/swipe_message"
            android:text="@string/swipe"
            android:layout_below="@id/welcome_message" />

    </RelativeLayout>
</RelativeLayout>